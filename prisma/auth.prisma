generator client {
  provider        = "prisma-client-js"
  engineType      = "library"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

enum Console {
  N64
  PS1
}

enum Region {
  U
  J
  P
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
}

model User {
  id           String       @id @default(uuid())
  username     String       @unique
  passwordHash String       @map("password_hash")
  createdAt    DateTime     @default(now()) @map("created_at")
  
  // Relações
  collection         UserGame[]
  friendsInitiated   Friendship[] @relation("friendsInitiated")
  friendsReceived    Friendship[] @relation("friendsReceived")

  @@map("users")
}

model UserGame {
  userId  String   @map("user_id")
  gameId  String   @map("game_id")
  console Console  @default(PS1)
  owned   Boolean  @default(true)
  addedAt DateTime @default(now()) @map("added_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, gameId, console])
  @@map("users_to_games")
}

model Friendship {
  userId1 String           @map("user_id_1")
  userId2 String           @map("user_id_2")
  status  FriendshipStatus @default(PENDING)

  user1 User @relation("friendsInitiated", fields: [userId1], references: [id], onDelete: Cascade)
  user2 User @relation("friendsReceived", fields: [userId2], references: [id], onDelete: Cascade)

  @@id([userId1, userId2])
  @@map("friendships")
}
