generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/prisma-ps1-client"
  engineType      = "library"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PS1_DATABASE_URL")
}

model Game {
  id          String   @id
  title       String
  developer   String?
  publisher   String?
  release_jp  String?
  release_na  String?
  release_pal String?
  cover_path  String?
  cover_data  Bytes?
  created_at  DateTime @default(now())
}
